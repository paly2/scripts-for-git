#/bin/bash
if [ -n $1 ]; then
	if [ $1 = 'new' ]; then
		mkdir "$2"
		cd "$2"
		git init
		test -n "$3" || exit
		shift
		shift
	fi
	git init
	git add $PWD
	git commit -m 'first commit'
	git remote add origin $1
	if [ $2 = 'push' ]; then
		git push origin master
	fi
else
	git init
	git add $PWD
	git commit -m 'first commit'
fi
